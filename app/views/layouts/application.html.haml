!!!
%html
%head
	%title Learn Hanzi Characters
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	%link{:rel => "stylesheet", :href => "http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css"}
	%link{:rel => "stylesheet", :href => "http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css"}
	= csrf_meta_tags

%body
	%header
		.wrapper.clearfix
		.navbar.navbar-default.navbar-static-top
			.container
				.navbar-header
					%button.navbar-toggle.collapsed{ "data-toggle".to_sym => "collapse", "data-target".to_sym => ".navbar-collapse"}
						%span.sr-only= "Toggle navigation"
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					.navbar-brand= link_to "Hanzi", root_path

				.navbar-collapse.collapse
					%ul.nav.navbar-nav.navbar-right
						%button.btn.btn-default.navbar-btn= link_to "About", about_page_path
						- if user_signed_in?
							%li= link_to "Add new list", new_list_path, class: "button"
							%li= link_to current_user.name, edit_user_registration_path
						- else
							%button.btn.btn-default.navbar-btn= link_to "Sign In", new_user_session_path
							%button.btn.btn-default.navbar-btn= link_to "Sign Up", new_user_registration_path, class: "button"

	- unless notice.blank?
		.alert.alert-info.notice #{content_tag(:strong, "Sorry!")} #{notice}
	- unless alert.blank?
		%p.alert= alert

	= yield