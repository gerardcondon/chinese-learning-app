%h1= list.title
%p= list.description

%p= list.user.name

%h2 Translations
- list.translations.each do |translation|
	= image_tag translation.image.url(:medium)
	%p #{translation.hanzi}, #{translation.english}

= link_to "Edit", edit_list_path(list)
= link_to "Destroy", list_path(list), method: :delete, data: {confirm: "Are you sure?"}
= link_to "Home", root_path